generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  nickname    String
  email       String   @unique
  password    String
  description String?
  age         Int?
  gender      String?
  country     String?
  city        String?
  avatar      String?
  isPremium   Boolean  @default(false)
  createdAt   DateTime @default(now())

  photos   Photography[]
  comments Comment[]
  likes    PhotoLike[]
}

model Photography {
  id          String   @id @default(uuid())
  title       String
  url         String
  description String?
  createdAt   DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  categories Category[]  @relation("PhotoCategories")
  comments   Comment[]
  isPremium  Boolean     @default(false)
  downloads  Int         @default(0)
  likes      Int         @default(0)
  views      Int         @default(0)
  likedBy    PhotoLike[]
}

model PhotoLike {
  id        String      @id @default(uuid())
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  photo     Photography @relation(fields: [photoId], references: [id])
  photoId   String
  createdAt DateTime    @default(now())

  @@unique([userId, photoId]) // un utilisateur ne peut liker une photo qu'une seule fois
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  photo   Photography @relation(fields: [photoId], references: [id])
  photoId String
}

model Category {
  id   String @id @default(uuid())
  name String @unique

  photos Photography[] @relation("PhotoCategories")
}
